@model List<DansBlog.Model.Entities.Comment>

@{
    ViewBag.Title = "Moderate";
}

<h2>Moderate</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    for (int i = 0; i < Model.Count; i++)
    {
        if (!Model[i].HasBeenModerated)
        {
            <div class="editor-label">
                @Html.LabelFor(model => model[i].CreationTime)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model[i].CreationTime)
                @Html.ValidationMessageFor(model => model[i].CreationTime)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model[i].Content)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model[i].Content)
                @Html.ValidationMessageFor(model => model[i].Content)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model[i].Author)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model[i].Author)
                @Html.ValidationMessageFor(model => model[i].Author)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model[i].Email)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model[i].Email)
                @Html.ValidationMessageFor(model => model[i].Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model[i].HasBeenModerated)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model[i].HasBeenModerated)
                @Html.ValidationMessageFor(model => model[i].HasBeenModerated)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model[i].PostId)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model[i].PostId)
                @Html.ValidationMessageFor(model => model[i].PostId)
            </div>
        }
        <p>
            <input type="submit" value="Moderate" />
        </p>
    }
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


