@model DansBlog.Presentation.ViewModels.MasterLayout

<h2 class="title">Archive</h2>

<ul class="archive">      
    @foreach(var item in Model.ArchivedMonths)
    {       
        <li class="month">           
            @Html.ActionLink(item.MonthName + " " + item.YearName, "ArchiveSearch", "Home", new {sort= item.MonthNumber, year = item.YearNumber}, 
                             null)<span>&nbsp;&nbsp;(@item.PostCount)</span>
        </li>            
    }
</ul>

